<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="160dp" android:layout_height="140dp"
	>
	<LinearLayout android:orientation="vertical"
		android:layout_height="fill_parent" android:layout_width="fill_parent"
		android:layout_alignParentLeft="true" android:layout_alignParentTop="true">
		<ImageView android:id="@+id/thumbImage"
		    android:scaleType="fitCenter"
			android:layout_width="160dp" android:layout_height="120dp"
			android:layout_centerHorizontal="true" />
		<TextView 
			android:id="@+id/imgName" 
			android:layout_width="fill_parent"
			android:layout_marginTop="1dip"
			android:layout_height="20dp" android:layout_centerHorizontal="true"
			android:text="img name" />
	</LinearLayout>
	<CheckBox android:id="@+id/itemCheckBox" 
	    android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true" />
</RelativeLayout>