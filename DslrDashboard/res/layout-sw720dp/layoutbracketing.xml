<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/bktleftlayout1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/img_bktshoot"
            android:layout_width="72dip"
            android:layout_height="72dip"
            android:layout_margin="1dip"
            android:background="@drawable/my_button"
            android:src="@drawable/shoot" />

        <ImageView
            android:id="@+id/img_bktshootsdram"
            android:layout_width="72dip"
            android:layout_height="72dip"
            android:layout_margin="1dip"
            android:background="@drawable/my_button"
            android:src="@drawable/shootsdram" />

        <ImageView
            android:id="@+id/img_bktaf"
            android:layout_width="72dip"
            android:layout_height="72dip"
            android:layout_margin="1dip"
            android:background="@drawable/my_button"
            android:src="@drawable/af" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bkttoplayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="horizontal" >

        <com.dslr.dashboard.helper.CheckableImageView
            android:id="@+id/chk_bkt"
            android:layout_width="72dip"
            android:layout_height="72dip"
            android:layout_margin="1dip"
            android:background="@drawable/checkableimageview" />

        <ImageView
            android:id="@+id/img_bracketingtype"
            android:layout_width="72dip"
            android:layout_height="72dip"
            android:layout_margin="1dip"
            android:background="@drawable/my_button" />
        
        <TextView
            android:id="@+id/txt_aebracketingcount"
            android:layout_width="72dip"
            android:layout_height="match_parent"
            android:layout_margin="1dip"
            android:background="@drawable/my_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />



        <LinearLayout
            android:id="@+id/aebktlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="72dip"
                android:layout_height="72dip"
                android:layout_margin="1dip"
                android:background="@drawable/my_button"
                android:src="@drawable/aebkt" />
            
            <TextView
                android:id="@+id/txt_aebracketingstep"
                android:layout_width="72dip"
                android:layout_height="match_parent"
                android:layout_margin="1dip"
                android:background="@drawable/my_button"
                android:gravity="center_vertical|center_horizontal"
                android:text="0.0 EV"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wbbktlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="72dip"
                android:layout_height="72dip"
                android:layout_margin="1dip"
                android:background="@drawable/my_button"
                android:src="@drawable/wbbkt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/adlbktlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="72dip"
                android:layout_height="72dip"
                android:layout_margin="1dip"
                android:background="@drawable/my_button"
                android:src="@drawable/adlbkt" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/custombktlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bkttoplayout1"
        android:gravity="right"
        android:orientation="horizontal" >

        <com.dslr.dashboard.helper.CheckableImageView
            android:id="@+id/chk_builtin_custom_bkt"
            android:layout_width="72dip"
            android:layout_height="72dip"
            android:layout_margin="1dip"
            android:background="@drawable/checkableimageview"
            android:src="@drawable/custombktbuiltin" />

        <TextView
            android:id="@+id/txt_custombktcount"
            android:layout_width="72dip"
            android:layout_height="match_parent"
            android:layout_margin="1dip"
            android:background="@drawable/my_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="3"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txt_custombktdirection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dip"
            android:background="@drawable/my_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="Both"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txt_custombktstep"
            android:layout_width="72dip"
            android:layout_height="match_parent"
            android:layout_margin="1dip"
            android:background="@drawable/my_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="0.0 EV"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <com.dslr.dashboard.helper.CheckableImageView
            android:id="@+id/chk_bkt_custom"
            android:layout_width="72dip"
            android:layout_height="72dip"
            android:layout_margin="1dip"
            android:background="@drawable/checkableimageview"
            android:src="@drawable/custombkt" />
        <!--
		<ImageView android:id="@+id/img_custombktshoot" android:layout_width="72dip"
			android:layout_height="72dip" android:background="@drawable/my_button"
			android:layout_margin="1dip" android:src="@drawable/shoot"/>
		<ImageView android:id="@+id/img_custombktshootsdram" android:layout_width="72dip"
			android:layout_height="72dip" android:background="@drawable/my_button"
			android:layout_margin="1dip" android:src="@drawable/shootsdram"/>
        -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/soundshootinglayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/custombktlayout"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_sound_indicator"
            android:layout_width="72dip"
            android:layout_height="72dip"
            android:padding="18sp"
            android:src="@android:drawable/ic_notification_overlay"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_sound_recording_media"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dip"
            android:background="@drawable/my_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="Sdcard"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txt_sound_rate"
            android:layout_width="72dip"
            android:layout_height="match_parent"
            android:layout_margin="1dip"
            android:background="@drawable/my_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="10"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txt_sound_threshold"
            android:layout_width="72dip"
            android:layout_height="match_parent"
            android:layout_margin="1dip"
            android:background="@drawable/my_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="10"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txt_sound_denominator"
            android:layout_width="72dip"
            android:layout_height="match_parent"
            android:layout_margin="1dip"
            android:background="@drawable/my_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="10"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <com.dslr.dashboard.helper.CheckableImageView
            android:id="@+id/chk_sound_shooting"
            android:layout_width="72dip"
            android:layout_height="72dip"
            android:layout_margin="1dip"
            android:background="@drawable/checkableimageview"
            android:src="@android:drawable/ic_btn_speak_now" />
    </LinearLayout>

</RelativeLayout>